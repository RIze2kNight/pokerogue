  public saveSetting(setting: string, valueIndex: number, location?: PropertyKey): boolean {
    let saveLocation = location;
    if(!location) saveLocation = "settings";
    let settings: object = {};

    if(saveLocation === "settings_mods"){
      setModSetting(setting, valueIndex);
    }else{
      setSetting(setting, valueIndex);
    }

    if (localStorage.hasOwnProperty(saveLocation)) {
      settings = JSON.parse(localStorage.getItem(saveLocation)!); // TODO: is this bang correct?
    }

    settings[setting] = valueIndex;
    settings["gameVersion"] = globalScene.game.config.gameVersion;
    localStorage.setItem(saveLocation, JSON.stringify(settings));
    return true;
  }

